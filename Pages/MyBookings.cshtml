@page
@model DSVInternBooking.Pages.MyBookingsModel
@{
}
@using DSVInternBooking.Models

<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
        <th>
            Country
        </th>
        <th>
            ID
        </th>
        <th>
            Capacity
        </th>
        <th>
          Equipment
        </th>
        <th>
            Start Time
        </th>
        <th>
            End Time
        </th>
        <th>

        </th>
    </tr>
    </thead>

    <tbody>
      @if (@Model.BookingService != null)
      {
        foreach (Booking booking in Model.BookingService.BookedRooms)
        {
          <tr>
            <td>
              @booking.Room.Country
            </td>
            <td>
              @booking.Room.ID
            </td>
            <td>
              @booking.Room.Capacity
            </td>
            <td>
              @booking.Room.EquipmentToString()
            </td>
            <td>
              @booking.DateTimeBegin.ToString()
            </td>
            <td>
              @booking.DateTimeEnd.ToString()
            </td>
            <td>
              <form method="post" asp-page-handler="Remove">
                <input type="hidden" name="Country" value="@booking.Room.Country" />
                <input type="hidden" name="ID" value="@booking.Room.ID" />
                <button type="submit" class="btn btn-danger">Remove</button>
              </form>
            </td>
          </tr>
        }
      }
    </tbody>
</table>