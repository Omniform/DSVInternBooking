@page
@model MyApp.Namespace.GetAllRoomsModel
@{
}

<table class="table table-bordered table-hover table-striped">
    <thead>
    <tr>
        <th>
            Country
        </th>
        <th>
            ID
        </th>
        <th>
            Capacity
        </th>
        <th>
            Equipment
        </th>
    </tr>
    </thead>
    <tbody>
     @if (@Model.m_selectedCountryRooms != null)
        {
            foreach (var room in Model.m_selectedCountryRooms)
            {
                <tr>
                    <td>
                        @room.Country
                    </td>
                    <td>
                        @room.ID
                    </td>
                    <td>
                        @room.Capacity
                    </td>
                    <td>
                        @room.EquipmentToString()
                    </td>
                </tr>
            }
        }
    </tbody>
</table>