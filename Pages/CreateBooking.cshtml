@page
@model DSVInternBooking.Pages.CreateBookingModel
@{
}

<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
        <th>
            Country: @Model.SelectedRoom.Country
        </th>
        <th>
            ID: @Model.SelectedRoom.ID
        </th>
        <th>
            Capacity: @Model.SelectedRoom.Capacity
        </th>
        <th>
            Equipment: @Model.SelectedRoom.EquipmentToString()
        </th>
    </tr>
    </thead>
</table>

<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>
        Start Time
      </th>
      <th>
        End Time
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
        @* <td>
          <input type="datetime-local" />
        </td>
        <td>
          <input type="datetime-local" />
        </td>
        <td> *@
          <form method="post">
            <td>
              <input type="datetime-local" asp-for="Booking.DateTimeBegin" />
            </td>
            <td>
              <input type="datetime-local" asp-for="Booking.DateTimeEnd" />
            </td>
            <input type="hidden" name="Room" value="@Model.SelectedRoom" />
            <button type="submit" class="btn btn-primary" asp-page-handler="Book">Confirm</button>
          </form>
        </td>
      </tr>
  </tbody>
</table>