@page
@model MyApp.Namespace.CountrySelectModel
@{
}

<body>
    <form method="post">
        <label for="SearchString">Filter</label>
        <input asp-for="SearchString" class="form-control"/>
        <input type="submit" asp-page-handler="NameSearch" class="btn btn-primary"/>
    </form>
    <table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                Country
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Countries != null)
        {
            foreach (string country in Model.Countries)
            {
                <tr>
                    <td>
                        <a class="btn" style="width: 100%; height: 100%;" href="GetAllRooms?country=@country">@country</a>
                    </td>
                </tr>
            }
        }
    </tbody>
    </table>
</body>
